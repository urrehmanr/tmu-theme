{
  "name": "tmu-theme",
  "version": "1.0.0",
  "description": "Modern Movie & TV Database WordPress Theme",
  "main": "assets/src/js/frontend.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:css": "tailwindcss -i ./assets/src/scss/main.scss -o ./assets/build/css/style.css --watch",
    "build:css:prod": "tailwindcss -i ./assets/src/scss/main.scss -o ./assets/build/css/style.css --minify",
    "start": "webpack serve --mode development",
    "lint": "eslint assets/src/js assets/src/blocks",
    "lint:fix": "eslint assets/src/js assets/src/blocks --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "wordpress",
    "theme",
    "movies",
    "tv-shows",
    "tmdb",
    "gutenberg",
    "tailwind"
  ],
  "author": "TheMovieUpdates",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@wordpress/babel-preset-default": "^7.31.0",
    "@wordpress/block-editor": "^12.15.0",
    "@wordpress/blocks": "^12.24.0",
    "@wordpress/components": "^25.13.0",
    "@wordpress/data": "^9.17.0",
    "@wordpress/element": "^5.24.0",
    "@wordpress/i18n": "^4.47.0",
    "@wordpress/scripts": "^26.12.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-wordpress": "^2.0.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "alpinejs": "^3.13.2",
    "lazysizes": "^5.3.2",
    "swiper": "^10.3.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}