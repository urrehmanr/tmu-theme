# TMU Theme Environment Configuration

# Development Environment
ENVIRONMENT=development
WP_DEBUG=true
WP_DEBUG_LOG=true

# Database Configuration
DB_HOST=localhost
DB_NAME=tmu_dev
DB_USER=root
DB_PASSWORD=

# TMDB API Configuration
TMDB_API_KEY_DEV=your_development_api_key_here
TMDB_API_KEY_STAGING=your_staging_api_key_here
TMDB_API_KEY_PROD=your_production_api_key_here

# Staging Environment
DB_HOST_STAGING=staging.example.com
DB_NAME_STAGING=tmu_staging
DB_USER_STAGING=tmu_staging
DB_PASSWORD_STAGING=staging_password

# Production Environment
DB_HOST_PROD=production.example.com
DB_NAME_PROD=tmu_production
DB_USER_PROD=tmu_production
DB_PASSWORD_PROD=production_password

# CDN Configuration
CDN_URL_STAGING=https://cdn-staging.example.com
CDN_URL_PROD=https://cdn.example.com

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
TMU_MONITORING_WEBHOOK=https://monitoring.example.com/webhook

# Deployment Configuration
STAGING_SERVER=staging.example.com
STAGING_USER=deploy
STAGING_PATH=/var/www/staging/wp-content/themes/tmu
STAGING_URL=https://staging.example.com

PRODUCTION_SERVER=production.example.com
PRODUCTION_USER=deploy
PRODUCTION_PATH=/var/www/production/wp-content/themes/tmu
PRODUCTION_URL=https://production.example.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Keys (Generate at https://api.wordpress.org/secret-key/1.1/salt/)
AUTH_KEY=your_auth_key_here
SECURE_AUTH_KEY=your_secure_auth_key_here
LOGGED_IN_KEY=your_logged_in_key_here
NONCE_KEY=your_nonce_key_here
AUTH_SALT=your_auth_salt_here
SECURE_AUTH_SALT=your_secure_auth_salt_here
LOGGED_IN_SALT=your_logged_in_salt_here
NONCE_SALT=your_nonce_salt_here