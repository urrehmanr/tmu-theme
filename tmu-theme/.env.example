# TMU Theme Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Type (development, staging, production)
WP_ENVIRONMENT_TYPE=development

# TMDB API Configuration
TMDB_API_KEY_DEV=your_development_api_key_here
TMDB_API_KEY_STAGING=your_staging_api_key_here
TMDB_API_KEY_PROD=your_production_api_key_here

# Database Configuration (Staging)
DB_HOST_STAGING=staging-db.example.com
DB_NAME_STAGING=staging_database
DB_USER_STAGING=staging_user
DB_PASSWORD_STAGING=staging_password

# Database Configuration (Production)
DB_HOST_PROD=prod-db.example.com
DB_NAME_PROD=production_database
DB_USER_PROD=production_user
DB_PASSWORD_PROD=production_password

# CDN Configuration
CDN_URL_STAGING=https://staging-cdn.example.com
CDN_URL_PROD=https://cdn.example.com

# Deployment Configuration
STAGING_HOST=staging.example.com
STAGING_USER=deploy_user
STAGING_PATH=/var/www/staging/wp-content/themes/tmu
STAGING_URL=https://staging.example.com

PRODUCTION_HOST=production.example.com
PRODUCTION_USER=deploy_user
PRODUCTION_PATH=/var/www/production/wp-content/themes/tmu
PRODUCTION_URL=https://yourdomain.com

# Monitoring Configuration
TMU_MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Keys (Generate at https://api.wordpress.org/secret-key/1.1/salt/)
AUTH_KEY=your_auth_key_here
SECURE_AUTH_KEY=your_secure_auth_key_here
LOGGED_IN_KEY=your_logged_in_key_here
NONCE_KEY=your_nonce_key_here
AUTH_SALT=your_auth_salt_here
SECURE_AUTH_SALT=your_secure_auth_salt_here
LOGGED_IN_SALT=your_logged_in_salt_here
NONCE_SALT=your_nonce_salt_here